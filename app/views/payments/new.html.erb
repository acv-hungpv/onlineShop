<%= render 'shared/errors', obj: @payment %>
<%= form_for(@payment,:html  => { class: "form-horizontal",role: "form" }) do |f| %>
  <div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :name_ship %>
    </div>
    <div class="col-md-8">
      <%= f.text_field :name_ship, :value => current_user.name, class: "form-control", placeholder: "Enter your name" %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :address_ship %>
    </div>
    <div class="col-md-8">
      <%= f.text_field :address_ship, :value => current_user.address, class: "form-control", placeholder: "Enter your address" %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :phone_ship %>
    </div>  
    <div class="col-md-8">
      <%= f.text_field :phone_ship, :value => current_user.phone, class: "form-control", placeholder: "Enter your phone" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit "Payment", class: "btn btn-primary btn-xlarge" %>
    </div>
  </div>
<% end %>

<div class="center">

  <h2>Total: <%= total_money_in_items(@items) %> USD</h2>
  <h3>Detail items payment</h3>
  <b>Items</b>
  <% @items.each do |item| %>
    <p>Name product: <%= item.product.name %></p>
    <%= image_tag item.product.image , size: 160 %>
    <p>Price: <%= item.product.price %></p>
    <p>Amount: <%= item.amounts %></p>
  <% end %>
</div>