div[align="center"]
  = will_paginate @products
  .row
    - @products.each do |product|
      - if product.image != nil
        .col-md-4
          figure.card.card-product
            .img-wrap
              = link_to product do
                = image_tag(product.image , resize: 180)
            figcaption.info-wrap
              h4.title
                = product.name.capitalize
              h4.title
                | Price: 
                = product.price
              - if current_user.present? && current_user.admin
                = link_to "Edit this product",edit_product_path(product), class: "btn btn-xs btn-warning"
                = link_to "Delete this product", product_path(product), method: :delete, data: { confirm: "are you sure"}, class: "btn btn-xs btn-danger", class: "btn btn-xs btn-warning"
              = link_to "Add to cart", addcart_path(product_id: product), method: :post, class: "btn btn-xs btn-warning"
  = will_paginate @products