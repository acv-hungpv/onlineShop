<div align = "center" >
  <% product =  Product.find(@product_id) %>
    <table>
      <tr>
        <td> IMG</td>
        <td>Product name</td>
        <td>Price </td>
        <td>Amounts</td>
        <td>Total prices</td>
      </tr>
      <tr>
        <td> <%= image_tag product.image , size: 100 %></td>
        <td><%= product.name.capitalize %></td>
        <td><%= product.price %> </td>
        <% if current_user != nil %>
          <td>
            <%= form_for :cart, url: {:action => 'change_cart', :controller => 'users'} do |f| %>
              <%= f.number_field :amounts,
                :value => current_user.items.find_by(product_id: @product_id).amounts,
                 min: 1 %>
              <%= f.hidden_field :product_id, :value => @product_id %>
              <%= f.submit  "change"%>

            <% end %>
          </td>
          <td><%= product.price*current_user.items.find_by(product_id: @product_id).amounts %></td>
        <% else %>
          <td>
            <%= form_for :cart, url: {:action => 'change_cart', :controller => 'users'} do |f| %>
              <%= f.number_field :amounts,
                :value => session[:cart][@product_id],
                 min: 1 %>
              <%= f.hidden_field :product_id, :value => @product_id %>
              <%= f.submit  "change"%>

            <% end %>
          </td>
          <td><%= product.price*session[:cart][@product_id] %></td>
        <% end %>

      </tr>
    </table>
</div>